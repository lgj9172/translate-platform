{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./public/assets/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "components/**/*",
    "apis/**/*",
    "hooks/**/*",
    "lib/**/*",
    "modals/**/*",
    "utils/**/*",
    "types/**/*",
    "server.js",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "backend"]
}
